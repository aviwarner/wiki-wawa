<!DOCTYPE html>
<html>
  <head>
    <title>WikiWawa</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if notice %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-warning"><%= alert %></p>
    <% end %>
    <div class="container">
      <ul class="nav nav-pills nav-fill">
        <li class="nav-item"><%= link_to "Home", welcome_index_path %></li>
        <li class="nav-item"><%= link_to "About", welcome_about_path %></li>
        <li class="nav-item"><%= link_to "Wikis", wikis_path %></li>
        <% if user_signed_in? %>
        <li class="pull-right nav-item">
          <span class="navbar-text">Signed in as: <strong><%= current_user.email %></strong></span>
        </li>
        <li class="pull-right nav-item">
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
        </li>
        <li class="pull-right nav-ite">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        </li>
        <% else %>
        <li class="pull-right nav-item">
          <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %>
        </li>
        <li class="pull-right nav-item">
          <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
        </li>
        <% end %>
      </ul>

    <%= yield %>
    </div>
  </body>
</html>
